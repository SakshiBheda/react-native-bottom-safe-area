{
  "name": "react-native-bottom-safe-area",
  "version": "1.0.0",
  "description": "A reusable BottomSafeArea component that handles safe area insets and keyboard avoidance automatically.",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index.tsx",
  "source": "src/index.tsx",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "build": "bob build"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "safe-area",
    "keyboard",
    "bottom-sheet",
    "ui"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/user/react-native-bottom-safe-area.git"
  },
  "author": "Sakshi Bheda <sakshibheda@example.com> (https://github.com/sakshibheda)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/user/react-native-bottom-safe-area/issues"
  },
  "homepage": "https://github.com/user/react-native-bottom-safe-area#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@react-native/eslint-config": "^0.73.1",
    "@types/jest": "^29.5.5",
    "@types/react": "^18.2.44",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "react": "18.2.0",
    "react-native": "^0.73.4",
    "react-native-builder-bob": "^0.23.2",
    "react-native-safe-area-context": "^4.9.0",
    "release-it": "^17.0.0",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-safe-area-context": "*"
  },
  "engines": {
    "node": ">= 18.0.0"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.json"
        }
      ]
    ]
  }
}
